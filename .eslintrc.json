{
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  },
  "env": {
    "es2020": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "rules": {
    "no-console": ["error", { "allow": ["warn", "error", "info"] }],
    "class-methods-use-this": ["error", { "exceptMethods": ["run"] }],
    "import/no-cycle": "off"
  }
}
